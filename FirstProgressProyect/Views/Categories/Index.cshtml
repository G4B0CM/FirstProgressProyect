@model IEnumerable<FirstProgressProyect.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h4 class="text-center" style="color: #FFFF">Categorías</h4>
<hr />
<div style=" background-color: rgba(23,50,88,0.8); min-height: 100vh; padding: 20px"
<p>
     <a asp-action="Create"class="btn btn-primary">Crear Categorias</a>
</p>
<table class="table" style="color: #FFFF">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
