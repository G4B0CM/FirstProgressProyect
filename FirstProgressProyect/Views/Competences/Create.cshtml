                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="AdminId" class="control-label"></label>
                    <select asp-for="AdminId" class="form-control" asp-items="ViewBag.AdminId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="NumParticipants" class="control-label"></label>
                    <input asp-for="NumParticipants" class="form-control" />
                    <span asp-validation-for="NumParticipants" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxNumParticipants" class="control-label"></label>
                    <input asp-for="MaxNumParticipants" class="form-control" />
