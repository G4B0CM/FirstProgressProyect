@model FirstProgressProyect.Models.Competence

@{
    ViewData["Title"] = "Create";
}

<h4 class="text-center">Competencias</h4>
<hr />
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-6">
        <div class="bg-light p-4 rounded shadow" style="background-color: rgba(23, 50, 88, 0.8);">
