@model IEnumerable<FirstProgressProyect.Models.Competence>

@{
    ViewData["Title"] = "Index";

    <h4 class="text-center">Competencias</h4>
    <hr />
}
    <div style=" background-color: rgba(23,50,88,0.8); min-height: 100vh; padding: 20px"
    <p>
    <a asp-action="Create"class="btn btn-primary">Crear Competencias</a>
    </p>


<table class="table" style="color: #FFFF">
    <thead>
        
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumParticipants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxNumParticipants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinNumParticipants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxDateOfIncription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admin.ConfirmPassword)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumParticipants)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxNumParticipants)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinNumParticipants)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxDateOfIncription)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
      
}
    </tbody>
</table>
</div>
